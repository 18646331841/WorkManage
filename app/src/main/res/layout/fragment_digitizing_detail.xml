<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.barisetech.www.workmanage.base.BaseFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            app:toolbar="@{fragment.observableToolbar}" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="@dimen/dp_10"
            app:cardElevation="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/normal_param"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_normal_param"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_title_top"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_9"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/normal_param"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintTop_toTopOf="@id/normal_param"
                    app:layout_constraintLeft_toLeftOf="@id/normal_param"
                    app:layout_constraintRight_toRightOf="@id/normal_param"/>


                <TextView
                    android:id="@+id/tv_normal_param"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_10"
                    android:lineSpacingExtra="5dp"
                    android:text=""
                    app:layout_constraintTop_toBottomOf="@+id/title_normal_param"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="@dimen/dp_10"
            app:cardElevation="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/advance_param"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_advance_param"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_title_top"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_9"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/title_alarm_details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintTop_toTopOf="@id/advance_param"
                    app:layout_constraintLeft_toLeftOf="@id/advance_param"
                    app:layout_constraintRight_toRightOf="@id/advance_param"/>


                <TextView
                    android:id="@+id/tv_advance_param"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_10"
                    android:lineSpacingExtra="5dp"
                    android:text=""
                    app:layout_constraintTop_toBottomOf="@+id/title_advance_param"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>
