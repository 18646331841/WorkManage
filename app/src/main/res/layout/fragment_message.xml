<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include layout="@layout/layout_toolbar" android:id="@+id/toolbar"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/message_menu"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <ImageView
                android:id="@+id/img_warn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/ic_launcher_round"
                app:layout_constraintBottom_toBottomOf="@id/message_menu"
                app:layout_constraintLeft_toLeftOf="@id/message_menu"
                app:layout_constraintRight_toLeftOf="@+id/img_event"
                app:layout_constraintTop_toTopOf="@id/message_menu" />

            <ImageView
                android:id="@+id/img_event"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/ic_launcher_round"
                app:layout_constraintBottom_toBottomOf="@id/message_menu"
                app:layout_constraintLeft_toRightOf="@+id/img_warn"
                app:layout_constraintRight_toLeftOf="@+id/img_news"
                app:layout_constraintTop_toTopOf="@id/message_menu" />

            <ImageView
                android:id="@+id/img_news"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/ic_launcher_round"
                app:layout_constraintBottom_toBottomOf="@id/message_menu"
                app:layout_constraintLeft_toRightOf="@+id/img_analysis_warn"
                app:layout_constraintRight_toLeftOf="@+id/img_event"
                app:layout_constraintTop_toTopOf="@id/message_menu" />

            <ImageView
                android:id="@+id/img_analysis_warn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/ic_launcher_round"
                app:layout_constraintBottom_toBottomOf="@id/message_menu"
                app:layout_constraintLeft_toRightOf="@+id/img_news"
                app:layout_constraintRight_toRightOf="@id/message_menu"
                app:layout_constraintTop_toTopOf="@id/message_menu" />

            <TextView
                android:id="@+id/tv_warn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/title_warn"
                app:layout_constraintLeft_toLeftOf="@id/img_warn"
                app:layout_constraintRight_toRightOf="@id/img_warn"
                app:layout_constraintTop_toBottomOf="@id/img_warn" />
            <TextView
                android:id="@+id/tv_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/title_event"
                app:layout_constraintLeft_toLeftOf="@id/img_event"
                app:layout_constraintRight_toRightOf="@id/img_event"
                app:layout_constraintTop_toBottomOf="@id/img_event" />
            <TextView
                android:id="@+id/tv_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/title_news"
                app:layout_constraintLeft_toLeftOf="@id/img_news"
                app:layout_constraintRight_toRightOf="@id/img_news"
                app:layout_constraintTop_toBottomOf="@id/img_news" />
            <TextView
                android:id="@+id/tv_analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/warn_analysis"
                app:layout_constraintLeft_toLeftOf="@id/img_analysis_warn"
                app:layout_constraintRight_toRightOf="@id/img_analysis_warn"
                app:layout_constraintTop_toBottomOf="@id/img_analysis_warn" />


        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/message_recyclerView"
            app:layout_constraintTop_toBottomOf="@+id/message_menu">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_message"
                android:textSize="16sp"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/message_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="8"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message_title"/>

    </android.support.constraint.ConstraintLayout>
</layout>
