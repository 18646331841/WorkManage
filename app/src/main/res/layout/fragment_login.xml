<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_ip"
        android:text="@string/tv_ip"
        android:textSize="16sp"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="53dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/tv_port"
        app:layout_constraintTop_toBottomOf="@id/img_logo"/>

    <EditText
        android:id="@+id/et_ip"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/layout_corners"
        app:layout_constraintBottom_toBottomOf="@id/tv_ip"
        app:layout_constraintLeft_toRightOf="@id/tv_ip"
        app:layout_constraintTop_toTopOf="@id/tv_ip" />


    <TextView
        android:id="@+id/tv_port"
        android:text="@string/tv_port"
        android:textSize="16sp"
        android:layout_marginTop="58dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_ip"
        app:layout_constraintRight_toRightOf="@id/tv_ip"
        app:layout_constraintLeft_toLeftOf="@id/tv_count"/>

    <EditText
        android:id="@+id/et_port"
        android:layout_width="233dp"
        android:layout_marginLeft="10dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@id/tv_port"
        app:layout_constraintTop_toTopOf="@id/tv_port"
        app:layout_constraintBottom_toBottomOf="@id/tv_port"
        app:layout_constraintRight_toRightOf="@id/et_count"
        android:background="@drawable/layout_corners" />

    <TextView
        android:id="@+id/tv_count"
        android:text="@string/tv_count"
        android:textSize="16sp"
        android:layout_marginTop="58dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_port"
        app:layout_constraintLeft_toLeftOf="@id/tv_password"/>

    <EditText
        android:id="@+id/et_count"
        android:layout_width="233dp"
        android:layout_marginLeft="10dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@id/tv_count"
        app:layout_constraintTop_toTopOf="@id/tv_count"
        app:layout_constraintBottom_toBottomOf="@id/tv_count"
        app:layout_constraintRight_toRightOf="@id/rl_pwd"
        android:background="@drawable/layout_corners"
        />



    <RelativeLayout
        android:id="@+id/rl_pwd"
        android:paddingLeft="10dp"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:background="@drawable/layout_corners"
        app:layout_constraintLeft_toRightOf="@id/tv_password"
        app:layout_constraintTop_toTopOf="@id/tv_password"
        app:layout_constraintBottom_toBottomOf="@id/tv_password"
        app:layout_constraintRight_toRightOf="@id/login">

        <EditText
            android:id="@+id/et_password"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/revealPassword"
            android:background="@null"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="#cacaca"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/revealPassword"
            android:layout_width="20dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/reveal_pwd" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_password"
        android:text="@string/tv_password"
        android:textSize="16sp"
        android:layout_marginTop="58dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/login"
        app:layout_constraintTop_toBottomOf="@id/tv_count"
        app:layout_constraintRight_toRightOf="@id/tv_count"/>



    <Button
        android:id="@+id/login"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:text="@string/tv_login"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="47dp"
        android:background="@drawable/shane_button_corners"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_pwd"/>

    <TextView
        android:text="@string/copyright"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="40dp"/>


</android.support.constraint.ConstraintLayout>