<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/line_label_text_color"
            android:text=""
            android:textSize="@dimen/sp_14"
            app:layout_constraintRight_toLeftOf="@id/et_content"
            app:layout_constraintTop_toTopOf="@id/et_content"/>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_10"
            android:background="@null"
            android:text=""
            android:textSize="@dimen/sp_14"
            app:layout_constraintRight_toLeftOf="@id/v_arrow"
            app:layout_constraintTop_toTopOf="@id/v_arrow"/>

