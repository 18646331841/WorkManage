<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_shape"
    android:elevation="@dimen/dp_10"
    android:layout_margin="@dimen/dp_10"
    android:orientation="vertical"
    android:weightSum="2">
    <TextView
        android:id="@+id/incident_to_site"
        android:text="@string/incident_detail_to_site"
        android:padding="@dimen/dp_5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_tv_top_blue"
        android:textColor="@drawable/selector_tv_white"/>
    <TextView
        android:id="@+id/incident_to_pipe"
        android:text="@string/incident_detail_to_pipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/dp_5"
        android:gravity="center"
        android:background="@drawable/selector_tv_bg_blue"
        android:textColor="@drawable/selector_tv_white"/>

    <TextView
        android:id="@+id/mulitple_selection"
        android:text="@string/mulitple_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/dp_5"
        android:gravity="center"
        android:background="@drawable/selector_tv_bottom_blue"
        android:textColor="@drawable/selector_tv_white"/>

</LinearLayout>